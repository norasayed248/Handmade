<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- HERO -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="430dp">

                <ImageView
                    android:id="@+id/imgHero"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/hero"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hero" />

                <ImageView
                    android:id="@+id/imgAuraLogo"
                    android:layout_width="270dp"
                    android:layout_height="167dp"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_marginTop="200dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/aura_logo"
                    android:scaleType="fitCenter"
                    android:src="@drawable/aura2" />

                <TextView
                    android:id="@+id/tvTagline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_marginTop="320dp"
                    android:text="@string/tagline"
                    android:textColor="@color/text_on_hero"
                    android:textSize="12sp"
                    android:fontFamily="serif"
                    android:gravity="center" />
            </FrameLayout>

            <!-- Best sellers -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/best_sellers"
                android:textSize="26sp"
                android:fontFamily="serif"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Item 1 -->
                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="6dp"
                            app:cardUseCompatPadding="false"
                            app:cardBackgroundColor="@color/bg_main">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/neck1"
                                    android:contentDescription="@string/choker" />

                                <ImageView
                                    android:id="@+id/btnFav1"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_gravity="top|end"
                                    android:layout_margin="8dp"
                                    android:src="@drawable/favoriteda"
                                    android:contentDescription="@string/favorite"
                                    android:clickable="true"
                                    android:focusable="true" />
                            </FrameLayout>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/item1_name"
                            android:fontFamily="serif"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:layout_marginTop="6dp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/item1_reviews"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/item1_price"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:gravity="center" />
                    </LinearLayout>

                    <!-- Item 2 -->
                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="6dp"
                            app:cardUseCompatPadding="false"
                            app:cardBackgroundColor="@color/bg_main">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ring1"
                                    android:contentDescription="@string/ring" />

                                <ImageView
                                    android:id="@+id/btnFav2"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_gravity="top|end"
                                    android:layout_margin="8dp"
                                    android:src="@drawable/favoriteda"
                                    android:contentDescription="@string/favorite"
                                    android:clickable="true"
                                    android:focusable="true" />
                            </FrameLayout>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/item2_name"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:layout_marginTop="6dp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/item2_reviews"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/item2_price"
                            android:textColor="@color/text_primary2"
                            android:textSize="12sp"
                            android:gravity="center" />
                    </LinearLayout>

                    <!-- Item 3 -->
                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="6dp"
                            app:cardUseCompatPadding="false"
                            app:cardBackgroundColor="@color/bg_main">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ear1"
                                    android:contentDescription="@string/earrings" />

                                <ImageView
                                    android:id="@+id/btnFav3"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_gravity="top|end"
                                    android:layout_margin="8dp"
                                    android:src="@drawable/favoriteda"
                                    android:contentDescription="@string/favorite"
                                    android:clickable="true"
                                    android:focusable="true" />
                            </FrameLayout>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/item3_name"
                            android:fontFamily="serif"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:layout_marginTop="6dp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/item3_reviews"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/item3_price"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:gravity="center" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Categories -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/categories"
                android:textSize="22sp"
                android:fontFamily="serif"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="10dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="18dp"
                android:stretchColumns="*">

                <TableRow>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="190dp"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="6dp"
                            app:cardUseCompatPadding="false">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/necklace_categ"
                                android:contentDescription="@string/necklaces" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/necklaces"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="190dp"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="6dp"
                            app:cardUseCompatPadding="false">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ring_categ"
                                android:contentDescription="@string/rings" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/rings"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                </TableRow>

                <TableRow>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="190dp"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="6dp"
                            app:cardUseCompatPadding="false">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/earrings_categ"
                                android:contentDescription="@string/earrings" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/earrings"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="190dp"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="6dp"
                            app:cardUseCompatPadding="false">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/sets_categ"
                                android:contentDescription="@string/sets" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/sets"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                </TableRow>

            </TableLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
